import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

 
    public static void main(String[] args) {
        Scanner mm = new Scanner(System.in);
        String n = mm.nextLine();
        
        String rev = "";
        for (int i = n.length()-1 ; i >= 0; i--) {
            rev += n.charAt(i);  
        }

        System.out.println(rev);
    }
}
